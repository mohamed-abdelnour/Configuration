# General
[core]
    autocrlf = input
    pager = less

[user]
    email = mohamed.k.abdelnour@gmail.com
    name = Mohamed Abdelnour

# Subcommands
[commit]
    gpgsign = true

[init]
    defaultBranch = main

[merge]
    tool = nvimdiff

[mergetool]
    keepBackup = false

[stash]
    showPatch = true
    showStat = true

# Delta
[delta]
    line-numbers = true
    line-numbers-minus-style = red
    line-numbers-plus-style = green
    line-numbers-zero-style = brightblack
    minus-emph-style = "#FFD9EB" "#852828"
    minus-empty-line-marker-style = "#EEBDBA" "#500F29"
    minus-non-emph-style = "#EEBDBA" "#500F29"
    minus-style = "#EEBDBA" "#500F29"
    plus-emph-style = "#E0F6E0" "#005A36"
    plus-empty-line-marker-style = "#B4DDB4" "#1D3C25"
    plus-non-emph-style = "#B4DDB4" "#1D3C25"
    plus-style = "#B4DDB4" "#1D3C25"
    syntax-theme = base16
    zero-style = syntax

# Aliases
[alias]
    a = add
    ap = a --patch

    b = branch
    ba = b -vv --all

    c = commit
    ca = c --amend
    ce = ca --no-edit

    cl = clone
    cls = cl --depth 1

    co = checkout

    d = diff
    ds = d --staged

    f = fetch

    l = log --graph --oneline
    la = l --all

    m = merge

    mt = mergetool

    p = push
    pf = p --force-with-lease
    pff = p --force

    r = rebase
    ra = r --abort
    rc = r --continue
    ri = r --interactive

    rs = restore
    rss = rs --staged
    rsf = rss --worktree

    rv = revert --no-commit

    s = status

    st = stash
    sta = st apply
    std = st drop
    stl = st list
    stp = st pop
    sts = st show

    sw = show --patch --stat

    w = worktree
    wa = w add
    wl = w list
    wm = w move
    wp = w prune
    wr = w remove
